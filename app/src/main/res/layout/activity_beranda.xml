<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_beranda"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="glory.doaanakmuslim.BerandaActivity"
    android:background="@drawable/back3"
    >



    <Button
        android:id="@+id/btn_doa"
        android:text="Doa"
        android:textColor="#141414"
        android:textSize="25sp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_shape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_above="@+id/btn_surah"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:onClick="keDoa"
        />

    <Button
        android:id="@+id/btn_evaluasi"
        android:text="Evaluasi"
        android:textColor="#141414"
        android:textSize="25sp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_shape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_centerInParent="true"
        android:onClick="keEvaluasi"
        />

    <Button
        android:id="@+id/btn_alarm"
        android:text="Alarm"
        android:textColor="#141414"
        android:textSize="25sp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_shape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_below="@+id/btn_evaluasi"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:onClick="keAlarm"
        />

    <Button
        android:id="@+id/btn_about"
        android:text="About"
        android:textColor="#141414"
        android:textSize="25sp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_shape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_below="@+id/btn_alarm"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:onClick="keAbout"
        />

    <Button
        android:id="@+id/btn_surah"
        android:text="Surah"
        android:textColor="#141414"
        android:textSize="25sp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_shape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_above="@id/btn_evaluasi"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:onClick="keSurah"
        />


</RelativeLayout>
